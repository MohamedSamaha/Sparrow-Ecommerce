    <section id="prodetails" class="section-p1">
        <div class="single-pro-image">
            <img src="/SparrowImageUploads/@Model.Product.ImageDtos.FirstOrDefault().ImageName" width="100%" id="MainImg" alt="">
            <div class="small-img-group">


                @foreach (var img in Model.Product.ImageDtos)
                {
                <div class="small-img-col">
                    <img src="/SparrowImageUploads/@img.ImageName" width="100%" class="small-img" alt="">
                </div>
                }
            </div>
        </div>

        <div class="single-pro-details">
        <span>@Model.Product.BrandName</span>
        <h6>@Model.Category.Name</h6>
        <h4>@Model.Product.Name</h4>
            <h2>$@Model.Product.UnitPrice</h2>
        <div class="star">
            @for (int i = 0; i < Model.Product.Rating.Value; i++)
            {
                <i class="fas fa-star"></i>
            }
        </div>

        <h4>Product Size</h4>
        <span class="mb-4">@Model.Product.Size</span>
        
        <div class="mt-4">
            <input type="number" value="1" id="productItemCount" min="1" max="20">
            <button class="btn normal" onclick="addItemToCart('@Model.Product.Id', ' @Model.Product.UnitPrice')">Add to Cart</button>
        </div>
        <h4>Product Material</h4>
        <span>@Model.Material.Name</span>
        <h4>Product Discount</h4>
        <span>@Model.Product.Discounts %</span>
        <h4>Product Color</h4>
        <span>@Model.Product.Color</span>
            <h4>Product Details</h4>
        <span>@Model.Product.Details</span>
        <h4>Product Description</h4>
        <span>@Model.Product.Description</span>

        

        </div>

    </section>

    <section id="product1" class="section-p1">
        <h2>Featured Products</h2>
        <p>Summer Collection New Modern Design</p>
        <div class="pro-container">
        @foreach (var product in Model.Category.productDtos)
        {
            <div class="pro" onclick="window.location.href='/Product/Details/@product.Id'">
                <img src="/SparrowImageUploads/@product.ImageDtos.FirstOrDefault().ImageName" alt="">
                <div class="des">
                    <span>@product.BrandName</span>
                    <h5>@product.Name</h5>
                    <div class="star">
                        @for (int i = 0; i < product.Rating.Value; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    <h4>$@product.UnitPrice</h4>
                </div>
                <a href=""><i class="fal fa-shopping-cart cart"></i></a>
            </div>
        }
    </div>
    </section>

